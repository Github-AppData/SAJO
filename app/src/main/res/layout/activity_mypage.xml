<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MypageActivity"
    android:background="#0C2840"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mypage_layout"
        android:orientation="horizontal"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_dynamic_neutral20"
            android:layout_margin="7dp"
            android:id="@+id/btn_go_main"
            android:text="back"
            >
        </Button>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_logo"
            android:src="@drawable/logo2"
            android:layout_margin="10dp"
            >

        </ImageView>




    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_info_label"
            android:text="내 정보"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="176dp"
            >

        </TextView>


    </LinearLayout>

    <TextView
        android:id="@+id/user_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        >

    </TextView>
    <TextView
        android:id="@+id/user_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_email_data"
        android:text="로그인한 유저의 이메일"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_name_data"
        android:text="로그인한 유저의 이름"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="100dp"
        >

    </TextView>

    <!-- 비밀번호 변경 버튼 -->
    <Button
        android:id="@+id/btn_to_wordbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나의 단어장"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#78EEFD"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="480dp"
        android:padding="15dp"
        >
    </Button>
    <Button
        android:id="@+id/btn_change_password_launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#16D6F7"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="550dp"
        android:padding="15dp"
        >
    </Button>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:backgroundTint="#2580CF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="620dp"
        android:padding="15dp"
        >
    </Button>




</RelativeLayout>
